{
  "name": "is4302-charity",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "downloadFabric": "mkdir -p fabric && cd fabric && curl -O https://raw.githubusercontent.com/hyperledger/composer-tools/master/packages/fabric-dev-servers/fabric-dev-servers.tar.gz && tar -xvf fabric-dev-servers.tar.gz && cd ..",
    "initBlockchain": "npm run setupFabric && npm run generateBNA && npm run installBNA && npm run generateBNCard",
    "start": "babel-node ./server/app.js",
    "teardownFabric": "export FABRIC_VERSION=hlfv11 && ./fabric/stopFabric.sh && ./fabric/teardownFabric.sh",
    "startComposerRESTServer": "composer-rest-server --card admin@is4302-charity --namespaces never --port 3001",

    "setupFabric": "export FABRIC_VERSION=hlfv11 && ./fabric/startFabric.sh && ./fabric/createPeerAdminCard.sh",
    "startFabric": "./fabric/startFabric.sh",
    "stopFabric": "./fabric/stopFabric.sh",
    "generateBNA": "composer archive create --sourceType dir --sourceName ./bna -a ./bna/is4302-charity.bna",
    "installBNA": "composer network install --card PeerAdmin@hlfv1 --archiveFile ./bna/is4302-charity.bna",
    "generateBNCard": "composer network start --networkName is4302-charity --networkVersion 0.0.1 --networkAdmin admin --networkAdminEnrollSecret adminpw --card PeerAdmin@hlfv1 --file ./bna/NetworkAdmin.card",
    "importBNCard": "composer card import --file ./bna/NetworkAdmin.card",
    "testBN": "composer network ping --card admin@is4302-charity",
    "webpack:dev": "cross-env NODE_ENV=development webpack --config ./webpack/webpack.config.dev.js",
    "webpack:prod": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.prod.js",
    "build": "rimraf dist && npm run webpack:dev && npm run start",
    "build:prod": "rimraf dist && npm run webpack:prod && npm run start"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.3.1",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "ejs": "^2.6.1",
    "express": "~4.16.0",
    "express-http-proxy": "^1.5.1",
    "firebase": "^5.9.0",
    "firebase-admin": "^7.1.0",
    "helmet": "^3.16.0",
    "history": "^4.9.0",
    "http-errors": "~1.6.2",
    "http-status-codes": "^1.3.2",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "popper.js": "^1.14.7",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "node-sass": "^4.11.0",
    "react-hot-loader": "^4.3.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2"
  }
}
