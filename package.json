    "react-helmet": "^5.2.0",
    "react-json-to-table": "^0.1.5",
    "react-router-dom": "^5.0.0",
    "react-transition-group": "^2.7.1",
    "utf-8-validate": "^5.0.2",
    "ws": "^6.2.1",
    "xmlhttprequest": "^1.8.0"
  },
