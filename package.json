{
  "name": "is4302-charity",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start":          "babel-node ./server/app.js",
    "startCRS":       "composer-rest-server --card admin@is4302-charity --namespaces never --port 3001",
    "startMCRS":      "export COMPOSER_PROVIDERS='{\"github\":{\"provider\":\"github\",\"module\":\"passport-github\",\"clientID\":\"f7b64765f9d04234f358\",\"clientSecret\":\"6664dd7accb605619502048abe63e6380c06f49d\",\"authPath\":\"/auth/github\",\"callbackURL\":\"/auth/github/callback\",\"successRedirect\":\"/\",\"failureRedirect\":\"/\"}}' && composer-rest-server --card admin@is4302-charity --multiuser true --namespaces never --port 3002",

    "downloadFabric": "mkdir -p fabric && cd fabric && curl -O https://raw.githubusercontent.com/hyperledger/composer-tools/master/packages/fabric-dev-servers/fabric-dev-servers.tar.gz && tar -xvf fabric-dev-servers.tar.gz && cd ..",
    "setupFabric":    "export FABRIC_VERSION=hlfv11 && ./fabric/startFabric.sh && ./fabric/createPeerAdminCard.sh",
    "startFabric":    "export FABRIC_VERSION=hlfv11 && ./fabric/startFabric.sh",
    "stopFabric":     "export FABRIC_VERSION=hlfv11 && ./fabric/stopFabric.sh",
    "teardownFabric": "export FABRIC_VERSION=hlfv11 && ./fabric/stopFabric.sh && ./fabric/teardownFabric.sh",

    "resetDocker":    "docker kill $(docker ps -q); docker rm $(docker ps -aq); docker rmi $(docker images dev-* -q)",
    "initBlockchain": "npm run setupFabric && npm run generateBNA && npm run installBNA && npm run generateBNC ; npm run importBNC",
    "generateBNA":    "rm ./bna/is4302-charity.bna; composer archive create --sourceType dir --sourceName ./bna -a ./bna/is4302-charity.bna",
    "installBNA":     "composer network install --card PeerAdmin@hlfv1 --archiveFile ./bna/is4302-charity.bna",
    "deleteOldBNC":   "composer card delete --card admin@is4302-charity",
    "generateBNC":    "rm ./bna/admin.card; composer network start --networkName is4302-charity --networkVersion 0.0.1 --networkAdmin admin --networkAdminEnrollSecret adminpw --card PeerAdmin@hlfv1 --file ./bna/admin.card",
    "importBNC":      "composer card import --file ./bna/admin.card",
    "testBN":         "composer network ping --card admin@is4302-charity",
    "seed":           "babel-node ./server/config/seed.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@hot-loader/react-dom": "^16.8.5",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "bufferutil": "^4.0.1",
    "classnames": "^2.2.6",
    "compression": "^1.7.4",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "~4.16.0",
    "express-fileupload": "^1.1.3-alpha.2",
    "express-http-proxy": "^1.5.1",
    "firebase": "^5.9.0",
    "firebase-admin": "^7.2.0",
    "helmet": "^3.16.0",
    "history": "^4.9.0",
    "http-errors": "~1.6.2",
    "http-status-codes": "^1.3.2",
    "jquery": "^3.3.1",
    "jsonwebtoken": "^8.5.1",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "primeflex": "^1.0.0-rc.1",
    "primeicons": "^1.0.0",
    "primereact": "^3.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
